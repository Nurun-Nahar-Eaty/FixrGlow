<section class="hero">
  {% if section.settings.image %}
    <img
      src="{{ section.settings.image | image_url: 'master' }}"
      alt="{{ section.settings.title | escape }}"
      width="1200"
      height="600"
      loading="lazy"
    >
  {% endif %}
  <div class="hero__content">
    <h1>{{ section.settings.title | default: 'general.welcome' | t }}</h1>
    <p>{{ section.settings.description }}</p>
    <a href="/collections/all" class="hero__cta">{{ 'general.shop_now' | t }}</a>
  </div>
</section>
{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Discover our curated collection of products."
    }
  ]
}
{% endschema %}
