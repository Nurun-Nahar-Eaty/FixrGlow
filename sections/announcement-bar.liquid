{% if section.settings.text != blank %}
  <div
    class="ecom-announcement-bar"
    style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }}; text-align:center"
  >
    <p>{{ section.settings.text | escape }}</p>
    {% if section.settings.link != blank %}
      <a href="{{ section.settings.link }}">Learn more</a>
    {% endif %}
  </div>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Welcome to our store!"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
