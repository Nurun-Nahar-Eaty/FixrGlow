<!-- sections/rich-text.liquid -->
<section class="rich-text">
  <div class="page-width">
    <div class="rich-text__content">
      <h2>{{ section.settings.heading }}</h2>
      <div>{{ section.settings.content }}</div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rich Text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "Use this section to share store information."
    }
  ],
  "presets": [
    {
      "name": "Rich Text"
    }
  ]
}
{% endschema %}
